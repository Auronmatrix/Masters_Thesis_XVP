<div class="tenantBackground" style="position: absolute; top: 150px; left: 72%; border-radius: 10px;   width: 500px; height: 70px; color: black; font-size: 18px; padding-top:15px">
    <p style="text-align: center"><i class="fa fa-dashboard"></i> Campaign Info:<span data-bind="text: campaignName"></span> </p>

    <div class="well text-primary" style="margin-bottom: 0px; z-index: -3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <label for="campaignStartInput">Campaign Name: </label>
                </div>
                <div class="col-md-4">
                    <input id="campaignStartInput" class="text" data-bind="value: campaignName" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="campaignStartInput">Campaign Start: </label>
                </div>
                <div class="col-md-4">
                    <input id="campaignStartInput" class="datepicker" data-bind="datepicker: campaignStart, datepickerOptions: { minDate: new Date() }" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="campaignEnd">Campaign End: </label>
                </div>
                <div class="col-md-4">
                    <input id="campaignEnd" class="datepicker" data-bind="datepicker: campaignEnd, datepickerOptions: { minDate: new Date() }" />
                </div>
            </div>
            <hr/>
            <h4>Search By</h4>
            <div>
                <label for="searchDistance">Distance</label>
                <input type="range" min=1 max="30" value="10" id="searchDistance" />
            </div>
            <br/>
            <div>
                <label for="searchWord">Word</label>
                <input type="text" id="searchWord" />
            </div>
        </div>
    </div>
    <div class="tenantBackground" style="border-radius: 0px 0px 10px 10px;  width: 500px; height: 70px; color: black; font-size: 18px;">
    </div>
    <div class="clearfix"></div>
    </div>
    
